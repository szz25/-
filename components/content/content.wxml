<view class="weui-panel__bd" bindtap='interlinkage'>
    <view class="weui-media-box weui-media-box_text">
      <view class="weui-media-box__title weui-media-box__title_in-text">
        <image class='image' src='{{content.img}}'></image>
        <view class='weui'>
          <text class='h1'>{{content.name}}</text>
          <text class='h2'>发布于{{content.time}}前</text>
        </view>
      </view>
      <view class="weui-media-box__desc">{{content.content}}</view>
      <view class="weui-media-box__info">
        <view class="weui-media-box__info__meta">
          <image class='img' src='../../images/about/P.png'></image>
          {{content.tokens}}
        </view>
        <view>
          <view class="weui-media-box__info__meta">
            <image class='img' src='../../images/about/good.png'></image>
            {{content.thumbs}}
          </view>
          <view class="weui-media-box__info__meta">
            <image class='img' src='../../images/about/comment.png'></image>
            {{content.comment}}
          </view>
          <view class="weui-media-box__info__meta">
            <image class='img' src='../../images/about/share.png'></image>
            {{content.relay}}
          </view>
        </view>
      </view>
    </view>
</view>