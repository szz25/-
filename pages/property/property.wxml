<!--pages/property/property.wxml-->
<view class='container'>
  <view class='sel'>
    <view class='head'>
      <navigator url='../record/record'><image class='img imgStyle' src='../../images/accet/u200.png'></image></navigator>
      <view class='balance'>
        <text style='font-size:90rpx;font-weight: bold;'>{{balance}}</text>
        <text style='font-size:30rpx;'>当前账户余额</text>
      </view>
    </view>
    <view class='deal'>
      <view class='carry' bindtap='carry'>
        <view class='pen'>
          <image src='../../images/accet/u220.png' class='imgStyle'></image>
        </view>
        <text>转账</text>
      </view>
      <view class='carry' bindtap='collection'>
        <view class='pen'>
          <image src='../../images/accet/u225.png' class='imgStyle'></image>
        </view>
        <text>收款</text>
      </view>
    </view>
    <view class='regard'>
      <text>甜甜心意，糖果派送</text>
      <navigator class='fa' url='../launch/launch'>
        <text>GO</text>
      </navigator>
    </view>
  </view>
  <view class='income'>
    <text class='incomeTit'>今日收益</text>
    <view class='canvas'>
      <ec-canvas  id="mychart-dom-bar" style="width: 100%; height: auto;" canvas-id="mychart-bar" ec="{{ ec }}"></ec-canvas>
    </view>
  </view>
</view>
