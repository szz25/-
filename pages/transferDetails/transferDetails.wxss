.message{
  width: 100%;
  margin: 20rpx 0;
  background: #eee;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
}
.sm{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
button{
  margin: 0 0;
}
.con{
  width: 100%;
  font-size: 30rpx;
  color: #ccc;
  display: flex;
  flex-direction: column;
}
.weui-media-box__title{
  font-weight:400;
  font-size:17px;
  width:auto;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  word-wrap:normal;
  word-wrap:break-word;
  word-break:break-all;
}
.weui-media-box__title_in-text{
  margin-bottom:8px;
  display: flex;
  align-items: center;
}
.image{
  width: 100rpx;
  height: 100rpx;
  margin-right: 10rpx;
}
.weui{
  display: flex;
  flex-direction: column;
}
.h2{
  color: #ccc;
  font-size: 30rpx;
  word-break:break-all; 
}
.foot{
  width: 100%;
  height: 10%;
  border-top: 2rpx solid #ccc;
  display: flex;
  align-items: center;
}
.foot text{
  padding: 10rpx 40rpx;
  border: 2rpx solid #ccc;
  box-sizing: border-box;
  margin-left: 40rpx;
}
.img{
  width: 250rpx;
  height: 35rpx;
}
.center{
  text-align: center;
}


/*使屏幕变暗 */
.commodity_screen {
 width: 100%;
 height: 100%;
 position: fixed;
 top: 0;
 left: 0;
 background: #000;
 opacity: 0.2;
 overflow: hidden;
 z-index: 1000;
 color: #fff;
}
/*对话框 */
.commodity_attr_box {
 height: 702rpx;
 width: 80%;
 overflow: hidden;
 position: absolute;
 bottom: 0;
 left: 0;
 top: 0;
 right: 0;
 margin: auto;
 z-index: 2000;
 background: #fff;
 padding-top: 20rpx;
 border-radius: 65rpx;
}
.clost{
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-weight: bold;
  width: 40rpx;
  height: 40rpx;
}
.scroll{
  width: 100%;
  height: 565rpx;
  display: flex;
  padding:20rpx;
  flex-direction: column;
  box-sizing: border-box;
}
.h1{
  display: block;
  width: 100%;
  padding: 0 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ccc;
  box-sizing: border-box;
}
.h5{
  display: block;
  margin-top: 20rpx;
  font-size: 35rpx;
}