.weui-media-box__title{
  font-weight:400;
  font-size:17px;
  width:auto;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  word-wrap:break-word;
  word-break:break-all;
}
.weui-media-box__title_in-text{
  margin-bottom:8px;
  display: flex;
  align-items: center;
}
.image{
  width: 100rpx;
  height: 100rpx;
  margin-right: 10rpx;
}
.weui{
  display: flex;
  flex-direction: column;
}
.h2{
  color: #ccc;
  font-size: 30rpx;
}
.foot{
  width: 100%;
  height: 10%;
  border-top: 2rpx solid #ccc;
  display: flex;
  align-items: center;
}
.foot text{
  padding: 10rpx 40rpx;
  border: 2rpx solid #ccc;
  box-sizing: border-box;
  margin-left: 40rpx;
}
.img{
  width: 250rpx;
  height: 35rpx;
}
.center{
  text-align: center;
}