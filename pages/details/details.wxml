<view class='container'>
  <view style='padding:0 40rpx;box-sizing:border-box;'>
    <text>{{content.title}}</text>
    <view style='display:flex;justify-content: space-between;align-items: center;'>
      <view class="weui-media-box__title weui-media-box__title_in-text">
        <image class='image' src='{{content.img}}'></image>
        <view class='weui'>
          <text class='h1'>{{content.name}}</text>
          <text class='h2'>发布于{{content.time}}前</text>
        </view>
      </view>
      <view class='weui center'>
        <image class='img' src='../../images/about/u1339.png'></image>
        <text class='h2'>文章已被区块认证</text>
      </view>
    </view>
    <scroll-view scroll-y style='font-size:30rpx;height:844rpx;'>{{content.content}}</scroll-view>
  </view>
  <view class='foot'>
    <text>以太坊</text>
    <text>新闻</text>
  </view>
</view>